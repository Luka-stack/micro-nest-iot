// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/db-machines"
}

datasource db {
  provider = "postgresql"
  url      = env("MACHINES_DATABASE_URL")
}

enum Status {
  IDLE
  WORKING
  MAINTENANCE
  BROKEN
}

model Producent {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  types  Type[]
  models Model[]
}

model Type {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  imageUrl   String
  producents Producent[]
  models     Model[]
  machines   Machine[]
}

model Model {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  workBase    Int
  workRange   Int
  faultRate   Float
  defaultRate Int
  maxRate     Int
  minRate     Int
  type        Type      @relation(fields: [typeId], references: [id])
  typeId      Int
  producent   Producent @relation(fields: [producentId], references: [id])
  producentId Int
  machines    Machine[]
}

model Machine {
  id               Int      @id @default(autoincrement())
  serialNumber     String   @unique
  producent        String
  type             Type     @relation(fields: [typeId], references: [id])
  typeId           Int
  model            Model    @relation(fields: [modelId], references: [id])
  modelId          Int
  status           Status
  lastStatusUpdate DateTime
  productionRate   Int
  version          Int
}
