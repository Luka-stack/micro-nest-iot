// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/db-machines"
}

datasource db {
  provider = "postgresql"
  url      = env("MACHINES_DATABASE_URL")
}

enum Status {
  IDLE
  WORKING
  MAINTENANCE
  BROKEN
}

model Producent {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  types  Type[]
  models Model[]
}

model Type {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  producents Producent[]
  models     Model[]
}

model Model {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  type        Type      @relation(fields: [typeId], references: [id])
  typeId      Int
  producent   Producent @relation(fields: [producentId], references: [id])
  producentId Int
}

model Machine {
  id             Int       @id @default(autoincrement())
  serialNumber   String    @unique
  imageUrl       String
  producent      String
  type           String
  model          String
  status         Status
  startedAt      DateTime?
  productionRate Int
  version        Int
}
