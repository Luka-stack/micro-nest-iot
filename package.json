{
  "name": "micro-iot",
  "version": "0.0.1",
  "description": "",
  "packageManager": "yarn@3.6.3",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/micro-iot/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch --maxWorkers=1",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/micro-iot/test/jest-e2e.json",
    "gen:db:kepware": "cd ./apps/kepware && prisma generate --schema ./src/database/schema.prisma",
    "mig:db:kepware": "cd ./apps/kepware && prisma migrate dev --schema ./src/database/schema.prisma",
    "seed:db:kepware": "cd ./apps/kepware && tsx ./src/database/seed.ts",
    "gen:db:machines": "drizzle-kit generate:pg --config=./apps/machines/drizzle.config.ts",
    "mig:db:machines": "cd ./apps/machines && tsx ./src/database/migrations/migrate.ts",
    "seed:db:machines": "cd ./apps/machines && tsx ./src/database/initial-seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.1",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.2.1",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/microservices": "^10.2.1",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.1",
    "@nestjs/schedule": "^3.0.3",
    "@prisma/client": "^5.2.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.5",
    "express-session": "^1.17.3",
    "joi": "^17.9.2",
    "mongoose": "^7.4.4",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "postgres": "^3.3.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.15",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.78",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "29.5.4",
    "@types/node": "^20.5.4",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "29.6.4",
    "prettier": "^3.0.2",
    "prisma": "^5.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "swc-loader": "^0.2.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/my-library(|/.*)$": "<rootDir>/libs/my-library/src/$1",
      "^@iot/communication(|/.*)$": "<rootDir>/libs/communication/src/$1",
      "^@iot/database(|/.*)$": "<rootDir>/libs/database/src/$1"
    }
  }
}
